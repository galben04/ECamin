<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.mihaia.ecamin.SetariFragment"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/background_gri">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:orientation="horizontal"
        android:background="@drawable/border_mic_verde"
        android:id="@+id/layoutValuta">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/arrow_down_24"
            android:layout_weight="0"
            android:id="@+id/iBtn_Setari_Valuta"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Moneda"
            android:textColor="@color/alb"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:textAlignment="center"/>

    </LinearLayout>
   <LinearLayout

       android:visibility="gone"
       android:id="@+id/linearL_Setari_Valuta"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:paddingLeft="5dp"
       android:paddingRight="5dp"
       android:background="@color/alb"
       android:paddingTop="5dp"
       android:paddingBottom="5dp">
       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:background="@drawable/border_alb"
           android:layout_marginRight="5dp"
           android:text="RON"
           android:textColor="@color/albastruLogo"/>
       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:background="@drawable/border"
           android:text="EUR"
           android:textColor="@color/alb"/>
   </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:orientation="horizontal"
        android:background="@drawable/border_mic_verde"
        android:id="@+id/layoutOptCont">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/arrow_down_24"
            android:layout_weight="0"
            android:id="@+id/ibtn_Setari_SchParola"/>

        <TextView
            android:textColor="@color/alb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Schimare Parola"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:textAlignment="center"
            />

    </LinearLayout>
    <android.support.v7.widget.GridLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:columnCount="3"
        android:padding="5dp"
        android:background="@color/alb"
        android:id="@+id/gridLayout_Setari_schParola">

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_row="0"
            app:layout_column="0"
            android:text="Nume utilizator"/>

        <EditText android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_row="0"
            app:layout_column="1"
            app:layout_columnSpan="2"
            android:text="Nume utilizator"
            android:gravity="center"
            app:layout_gravity="center_horizontal"
            android:id="@+id/et_Setari_NumeCont"
            android:inputType="none"/>

        <TextView  android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_row="1"
            app:layout_column="0"
            android:text="Parola"/>

        <EditText android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_row="1"
            app:layout_column="1"
            app:layout_columnSpan="2"
            android:hint="Parola"
            android:gravity="center"
            app:layout_gravity="center_horizontal"
            android:id="@+id/et_Setari_Parola"/>

        <TextView  android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_row="2"
            app:layout_column="0"
            android:text="Reintroduce Parola"
            android:id="@+id/tv_setari_parola2"/>

        <EditText android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_row="2"
            app:layout_column="1"
            app:layout_columnSpan="2"
            android:hint="Reintroduce parola"
            app:layout_gravity="center_horizontal"
            android:id="@+id/et_setari_parola2"/>

        <Button android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_column="0"
            android:paddingTop="10dp"
            app:layout_row="3"
            app:layout_columnSpan="3"
            android:padding="5dp"
            android:text="Salveaza"
            android:background="@drawable/border"
            android:textColor="@color/alb"
            android:id="@+id/btn_salveaza"/>

    </android.support.v7.widget.GridLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:orientation="horizontal"
        android:background="@drawable/border_mic_verde"
        android:id="@+id/layoutInfoCont">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/arrow_down_24"
            android:layout_weight="0"
            android:id="@+id/ibtn_Setari_InfCont" />

        <TextView
            android:textColor="@color/alb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Informatii cont"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:textAlignment="center"/>

    </LinearLayout>
    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:columnCount="3"
        android:visibility="gone"
        android:padding="5dp"
        android:background="@color/alb"
        android:id="@+id/gridLayout_Setari_infCont">

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_row="0"
            app:layout_column="0"
            android:text="Nume utilizator"/>

        <EditText android:layout_width="wrap_content"
            android:focusable="false"
            android:layout_height="wrap_content"
            app:layout_row="0"
            app:layout_column="1"
            app:layout_columnSpan="2"
            android:text="Nume utilizator"
            android:gravity="center"
            app:layout_gravity="center_horizontal"
            android:id="@+id/et_SetariInfo_NumeUtilizator"
            android:inputType="none"/>

        <TextView  android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_row="1"
            app:layout_column="0"
            android:text="Nume"/>

        <EditText android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_row="1"
            app:layout_column="1"
            app:layout_columnSpan="2"
            android:gravity="center"
            app:layout_gravity="center_horizontal"
            android:id="@+id/et_SetariInfo_Nume"
            android:inputType="none"
            android:focusable="false"/>

        <TextView  android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_row="2"
            app:layout_column="0"
            android:text="Prenume" />

        <EditText android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_row="2"
            app:layout_column="1"
            app:layout_columnSpan="2"
            app:layout_gravity="center_horizontal"
            android:id="@+id/et_setariInfo_prenume"
            android:inputType="none"
            android:focusable="false"
            />


        <TextView  android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_row="3"
            app:layout_column="0"
            android:text="Telefon" />

        <EditText android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_row="3"
            app:layout_column="1"
            app:layout_columnSpan="2"
            app:layout_gravity="center_horizontal"
            android:id="@+id/et_setariInfo_telefon"
            android:inputType="none"
            android:focusable="false"
            />

    </android.support.v7.widget.GridLayout>
</LinearLayout>
</ScrollView>
