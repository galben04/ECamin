<?xml version="1.0" encoding="utf-8"?>


<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/alb"
    android:layout_margin="10dp"
    style="@style/Container"
    android:padding="15dp"
    android:stretchColumns="1">

    <TableRow android:id="@+id/tableRow_Vizibil">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/luna_martie"
            style="@style/textNormal"
            android:textColor="@color/albastruLogo"
            android:textStyle="bold"
            android:id="@+id/tvProgramari_Data"
            android:gravity="center"
            android:layout_marginRight="10dp"/>

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="right">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/delete_24"
                android:layout_marginRight="15dp"
                android:id="@+id/iBtnProgramari_Delete"/>

            <ImageButton
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                app:layout_row="0"
                app:layout_column="2"
                android:background="@drawable/more_24"
                android:gravity="right"
                android:padding="12dp"
                android:id="@+id/iBtnProgramari_Detalii"/>
        </LinearLayout>
    </TableRow>

    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        style="@style/LinieSepMic"
        android:background="@color/verdeLogo"
        app:layout_row="1"
        app:layout_column="0"
        app:layout_columnSpan="3" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_row="2"
        app:layout_column="0"
        app:layout_columnSpan="3"
        android:stretchColumns="1"
        android:layout_margin="5dp"
        android:paddingBottom="10dp"
        android:id="@+id/tableLayoutProgramari_Detalii">

        <TableRow
            android:layout_margin="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/id_masina"
                style="@style/textNormal"
                android:textColor="#000000" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/id_masina_1"
                android:gravity="center"
                style="@style/textNormal"
                android:textColor="#000000"
                android:id="@+id/tvProgramari_IdMasina"/>
        </TableRow>

        <TableRow
            android:layout_margin="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/etaj"
                style="@style/textNormal"
                android:textColor="#000000"
                android:gravity="left"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/etaj_1"
                android:gravity="center"
                style="@style/textNormal"
                android:id="@+id/tvProgramari_Etaj_TempUser"
                android:textColor="#000000"/>
        </TableRow>

        <TableRow
            android:layout_margin="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/etaj"
                style="@style/textNormal"
                android:id="@+id/tvProgramari_IdProgramare"
                android:textColor="#000000"
                android:gravity="left"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/etaj_1"
                android:gravity="center"
                style="@style/textNormal"
                android:id="@+id/isDel"
                android:textColor="#000000"/>
        </TableRow>
    </TableLayout>

</TableLayout>
