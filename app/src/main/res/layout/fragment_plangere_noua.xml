<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mihaia.ecamin.Plangeri.PlangereNouaFragment"
    android:background="@color/background_gri">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        style="@style/Container"
        android:background="@color/alb"
    android:layout_margin= "@dimen/activity_horizontal_margin">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/plangere_noua_titlu"
            android:gravity="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="@color/albastruLogo"
            android:layout_marginBottom="5dp"/>

        <View
            android:layout_width="match_parent"
            style="@style/LinieSepMare"
            ></View>

        <TextView android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:spinnerMode="dropdown"
            android:textAlignment="center"
            android:background="@color/portocaliuING"
            android:id="@+id/tv_PlangereNoua_Data"
            android:textColor="@color/alb"
            android:text ="07.07.2017"
            style="@style/textNormal">
        </TextView>

        <!--<EditText-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_marginBottom="10dp"-->
            <!--android:hint="Nume"/>-->

        <!--<EditText-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_width="match_parent"-->
            <!--android:hint="Camera"-->
            <!--android:paddingLeft="5dp"-->
            <!--android:paddingRight="10dp"-->
            <!--android:layout_marginBottom="10dp"-->
            <!--/>-->

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Detalii despre plangere"
            android:maxLines="5"
            android:lines="3"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/editText_PlangereNoua_Descriere" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background= "#F2EC2C"
            android:text="@string/button_trimite"
            style="@style/textNormal"
            android:layout_marginTop="10dp"
            android:textColor="#000000"
            android:id="@+id/btn_PlangereNoua_Trimite"/>
    </LinearLayout>
</LinearLayout>
